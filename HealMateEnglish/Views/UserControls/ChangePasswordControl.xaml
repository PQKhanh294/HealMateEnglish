<UserControl x:Class="HealMateEnglish.Views.UserControls.ChangePasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Đổi mật khẩu" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Mật khẩu cũ:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="OldPasswordBox" Margin="0,5,0,10" Height="28"/>
            <TextBlock Text="Mật khẩu mới:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,5,0,10" Height="28"/>
            <TextBlock Text="Xác nhận mật khẩu mới:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5,0,0" Height="28"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Đổi mật khẩu" Height="38" Width="140" HorizontalAlignment="Left" Margin="0,10,0,0"/>
        <TextBlock Grid.Row="2" x:Name="ResultTextBlock" Foreground="Green" FontWeight="SemiBold" Margin="160,10,0,0"/>
    </Grid>
</UserControl> 