<Window x:Class="HealMateEnglish.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealMateEnglish.Views"
        xmlns:vm="clr-namespace:HealMateEnglish.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="🔧 Admin Dashboard - HealMateEnglish" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    
    <Window.DataContext>
        <vm:AdminViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="4" BlurRadius="12" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#BD2130"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#545B62"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24,20" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🔧 Admin Dashboard" FontSize="28" FontWeight="Bold" 
                               Foreground="#2C3E50" Margin="0,0,0,8"/>
                    <TextBlock Text="Manage users, reading topics, and writing topics" FontSize="16" 
                               Foreground="#6C757D"/>
                </StackPanel>
                  <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🔄 Refresh All" Style="{StaticResource SecondaryButtonStyle}"
                            Click="RefreshButton_Click" Margin="0,0,16,0"/>
                    <Button Content="📊 Export Data" Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="16,0,16,16" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="#E9ECEF" CornerRadius="8,8,0,0" 
                                        Padding="16,12" Margin="0,0,4,0">
                                    <ContentPresenter ContentSource="Header" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#DEE2E6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </TabControl.Resources>
            
            <!-- Users Tab -->
            <TabItem Header="👥 Users Management">
                <Border Style="{StaticResource ModernCardStyle}" Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="👥 Registered Users" FontSize="20" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,20"/>
                          <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" 
                                  SelectedItem="{Binding SelectedUser}"
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  GridLinesVisibility="None" HeadersVisibility="Column"
                                  Background="Transparent" BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="80"/>
                                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="120"/>
                                <DataGridCheckBoxColumn Header="Is Admin" Binding="{Binding IsAdmin}" Width="100"/>
                                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>
            
            <!-- Reading Topics Tab -->
            <TabItem Header="📚 Reading Topics">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Reading Topics List -->
                    <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="📚 Existing Reading Topics" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,16"/>
                            
                            <ListView Grid.Row="1" ItemsSource="{Binding ReadingTopics}" 
                                      SelectedItem="{Binding SelectedReadingTopic}"
                                      Background="Transparent" BorderThickness="1" BorderBrush="#E0E0E0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="2"
                                                BorderThickness="1" BorderBrush="#E9ECEF">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" 
                                                           Foreground="#2C3E50" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Part}" TextWrapping="Wrap" FontSize="12" 
                                                           Foreground="#6C757D" MaxHeight="60"/>
                                                <Border Background="#E3F2FD" CornerRadius="10" Padding="6,3" 
                                                        HorizontalAlignment="Left" Margin="0,6,0,0">
                                                    <TextBlock Text="📖 Reading" FontSize="10" 
                                                               FontWeight="Medium" Foreground="#1976D2"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>                            
                            <Button Grid.Row="2" Content="🗑️ Delete Selected" Style="{StaticResource DangerButtonStyle}"
                                    Click="DeleteReadingButton_Click" Margin="0,16,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Add New Reading Topic -->
                    <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="➕ Add New Reading Topic" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Title:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox x:Name="NewReadingTitleTextBox" Text="{Binding NewReadingTitle, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12" FontSize="14" Margin="0,0,0,16"
                                     BorderThickness="1" BorderBrush="#E0E0E0"/>
                            
                            <TextBlock Text="Content:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox x:Name="NewReadingContentTextBox" Text="{Binding NewReadingContent, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True" TextWrapping="Wrap" MinHeight="200"
                                     Padding="12" FontSize="14" Margin="0,0,0,20"
                                     BorderThickness="1" BorderBrush="#E0E0E0"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            
                            <Button Content="➕ Add Reading Topic" Style="{StaticResource SuccessButtonStyle}"
                                    Click="AddReadingButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Writing Topics Tab -->
            <TabItem Header="✍️ Writing Topics">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Writing Topics List -->
                    <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="✍️ Existing Writing Topics" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,16"/>
                            
                            <ListView Grid.Row="1" ItemsSource="{Binding WritingTopics}" 
                                      SelectedItem="{Binding SelectedWritingTopic}"
                                      Background="Transparent" BorderThickness="1" BorderBrush="#E0E0E0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="2"
                                                BorderThickness="1" BorderBrush="#E9ECEF">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" 
                                                           Foreground="#2C3E50" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Band}" TextWrapping="Wrap" FontSize="12" 
                                                           Foreground="#6C757D"/>
                                                <Border Background="#E8F5E8" CornerRadius="10" Padding="6,3" 
                                                        HorizontalAlignment="Left" Margin="0,6,0,0">
                                                    <TextBlock Text="📝 Writing" FontSize="10" 
                                                               FontWeight="Medium" Foreground="#28A745"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            
                            <Button Grid.Row="2" Content="🗑️ Delete Selected" Style="{StaticResource DangerButtonStyle}"
                                    Click="DeleteWritingButton_Click" Margin="0,16,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Add New Writing Topic -->
                    <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="➕ Add New Writing Topic" FontSize="18" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20"/>                            <TextBlock Text="Title:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox x:Name="NewWritingTitleTextBox" Text="{Binding NewWritingTitle, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12" FontSize="14" Margin="0,0,0,16"
                                     BorderThickness="1" BorderBrush="#E0E0E0"/>
                            
                            <TextBlock Text="Difficulty Level:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ComboBox x:Name="NewWritingBandComboBox" 
                                      SelectedValue="{Binding NewWritingDescription, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Tag"
                                      DisplayMemberPath="Content"
                                      Padding="12" FontSize="14" Margin="0,0,0,20"
                                      BorderThickness="1" BorderBrush="#E0E0E0">
                                <ComboBoxItem Content="Beginner (Band 5.0-5.5)" Tag="Beginner"/>
                                <ComboBoxItem Content="Intermediate (Band 6.0-6.5)" Tag="Intermediate" IsSelected="True"/>
                                <ComboBoxItem Content="Advanced (Band 7.0-7.5)" Tag="Advanced"/>
                            </ComboBox>
                            
                            <Button Content="➕ Add Writing Topic" Style="{StaticResource SuccessButtonStyle}"
                                    Click="AddWritingButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="White" Padding="24,12" Margin="0">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="90" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" FontSize="14" 
                           Foreground="#6C757D" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⏳ Loading..." FontSize="14" Foreground="#FFC107" 
                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="🕒" FontSize="14" Foreground="#6C757D" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat=HH:mm:ss}" 
                               FontSize="14" Foreground="#6C757D"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
