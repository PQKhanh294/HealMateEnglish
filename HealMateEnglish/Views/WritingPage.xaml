<Page x:Class="HealMateEnglish.Views.WritingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealMateEnglish.Views"
      xmlns:converters="clr-namespace:HealMateEnglish.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Writing Practice">
    
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BooleanToVisibilityInverseConverter x:Key="InvBoolToVis"/>
        <converters:BooleanInverseConverter x:Key="BoolInverse"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        
        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="4" BlurRadius="12" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E7E34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#545B62"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Reset Button Style -->
        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF5722"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E64A19"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D84315"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24,20" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="✍️ Writing Practice" FontSize="28" FontWeight="Bold" 
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Choose a topic and practice your writing skills" FontSize="16" 
                           Foreground="#6C757D" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Topic Selection and Writing Area -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Mode Selection -->
                    <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton x:Name="rbPreset" Content="📝 Choose from preset topics" 
                                         Margin="0,0,24,0" IsChecked="{Binding IsPresetMode}" 
                                         GroupName="TopicMode" FontSize="14" FontWeight="Medium"/>
                            <RadioButton x:Name="rbCustom" Content="💭 Enter your own topic" 
                                         IsChecked="{Binding IsPresetMode, Converter={StaticResource BoolInverse}}"
                                         GroupName="TopicMode" FontSize="14" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <!-- Topic Selection -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <!-- Preset Topic Selection -->
                        <Grid Visibility="{Binding IsPresetMode, Converter={StaticResource BoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="📚 Available Writing Topics:" 
                                       FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12"/>
                            
                            <ComboBox Grid.Row="1" ItemsSource="{Binding Topics}"
                                      SelectedItem="{Binding SelectedTopic}"
                                      DisplayMemberPath="Title"
                                      MinHeight="40" FontSize="14" Padding="12"
                                      BorderThickness="1" BorderBrush="#E0E0E0"/>

                            <!-- Selected Topic Display -->
                            <Border Grid.Row="2" Background="#E8F5E8" BorderThickness="1" BorderBrush="#28A745"
                                    CornerRadius="8" Padding="12" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="📝 Current Topic:" FontWeight="SemiBold" 
                                               Foreground="#155724" FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedTopic.Title}"
                                               FontWeight="Medium" FontSize="14" TextWrapping="Wrap"
                                               Foreground="#155724"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Custom Topic Entry -->
                        <Grid Visibility="{Binding IsPresetMode, Converter={StaticResource InvBoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="💭 Enter your writing topic:" 
                                       FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12"/>
                            
                            <TextBox Grid.Row="1" Text="{Binding CustomTopic, UpdateSourceTrigger=PropertyChanged}"
                                     MinHeight="40" FontSize="14" Padding="12"
                                     BorderThickness="1" BorderBrush="#E0E0E0"/>

                            <!-- Custom Topic Display -->
                            <Border Grid.Row="2" Background="#FFF3CD" BorderThickness="1" BorderBrush="#FFC107"
                                    CornerRadius="8" Padding="12" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="✍️ Your Topic:" FontWeight="SemiBold" 
                                               Foreground="#856404" FontSize="12"/>
                                    <TextBlock Text="{Binding CustomTopic}" 
                                               FontWeight="Medium" FontSize="14" TextWrapping="Wrap"
                                               Foreground="#856404"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Writing Area -->                    <StackPanel Grid.Row="2">
                        <TextBlock Text="📖 Write your essay:" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12"/>
                        
                        <Border BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                <TextBox Text="{Binding UserText, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True" TextWrapping="Wrap"
                                         MinHeight="250" FontSize="14" Padding="16"
                                         BorderThickness="0" Background="Transparent"
                                         IsReadOnly="{Binding IsSubmitting}"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Word Count Display -->
                        <TextBlock Text="{Binding WordCountDisplay}" 
                                   FontSize="12" HorizontalAlignment="Right"
                                   Foreground="#6C757D" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Column: Results and Feedback -->
            <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="8,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Instructions (shown when not submitted) -->
                        <Border Background="#FFF8E1" BorderThickness="1" BorderBrush="#FFC107"
                                CornerRadius="8" Padding="20" Margin="0,0,0,16"
                                Visibility="{Binding HasSubmitted, Converter={StaticResource InvBoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="📋 Instructions" FontWeight="Bold" 
                                           FontSize="18" Foreground="#FF8F00" Margin="0,0,0,12"/>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="1." FontWeight="Bold" Foreground="#FF8F00" Width="20"/>
                                        <TextBlock Text="Choose a topic or enter your own" FontSize="14" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="2." FontWeight="Bold" Foreground="#FF8F00" Width="20"/>
                                        <TextBlock Text="Write your essay (no minimum word count)" FontSize="14" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="3." FontWeight="Bold" Foreground="#FF8F00" Width="20"/>
                                        <TextBlock Text="Click Submit to get AI feedback and score" FontSize="14" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="4." FontWeight="Bold" Foreground="#FF8F00" Width="20"/>
                                        <TextBlock Text="Review the feedback and suggestions" FontSize="14" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Score Display -->
                        <Border Background="#E8F5E8" BorderThickness="1" BorderBrush="#28A745"
                                CornerRadius="8" Padding="20" Margin="0,0,0,16"
                                Visibility="{Binding HasSubmitted, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="🎯 Your Score" FontWeight="Bold" 
                                           FontSize="18" Foreground="#155724" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding ScoreDisplay}" 
                                           FontSize="32" FontWeight="Bold" 
                                           Foreground="#155724" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- AI Feedback -->
                        <Border Background="#F3E5F5" BorderThickness="1" BorderBrush="#9C27B0"
                                CornerRadius="8" Padding="20" Margin="0,0,0,16"
                                Visibility="{Binding HasSubmitted, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="🤖 AI Feedback" FontWeight="Bold" 
                                           FontSize="18" Foreground="#7B1FA2" Margin="0,0,0,12"/>
                                <TextBlock Text="{Binding AiFeedback}" 
                                           TextWrapping="Wrap" FontSize="14" LineHeight="20"/>
                            </StackPanel>
                        </Border>

                        <!-- Suggestions -->
                        <Border Background="#E3F2FD" BorderThickness="1" BorderBrush="#2196F3"
                                CornerRadius="8" Padding="20"
                                Visibility="{Binding HasSubmitted, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="💡 Suggestions for Improvement" FontWeight="Bold" 
                                           FontSize="18" Foreground="#1976D2" Margin="0,0,0,12"/>
                                
                                <!-- Display actual suggestions from AI -->
                                <ItemsControl ItemsSource="{Binding Suggestions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                                <TextBlock Text="•" FontWeight="Bold" Foreground="#1976D2" 
                                                           FontSize="16" Margin="0,0,12,0" VerticalAlignment="Top"/>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="14" 
                                                           LineHeight="18" VerticalAlignment="Top"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Fallback message when no suggestions -->
                                <TextBlock Text="No suggestions available" 
                                           FontStyle="Italic" FontSize="14" Foreground="#6C757D"
                                           Visibility="{Binding Suggestions.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="White" Padding="24,16" Margin="0">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="90" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="← Back to Dashboard" Style="{StaticResource SecondaryButtonStyle}"
                        Width="180" Margin="0,0,16,0" Click="CancelButton_Click"/>
                
                <Button Content="🔄 Reset" Style="{StaticResource ResetButtonStyle}"
                        Width="120" Margin="0,0,16,0" Command="{Binding ResetCommand}"/>
                
                <Button Width="140" Command="{Binding SubmitCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Setter Property="ToolTip" Value="Submit your writing for evaluation"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSubmitting}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="ToolTip" Value="Submitting..."/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🚀 Submit" Visibility="{Binding IsSubmitting, Converter={StaticResource InvBoolToVis}}"/>
                        <TextBlock Text="⏳ Submitting..." Visibility="{Binding IsSubmitting, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
